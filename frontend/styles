    background: linear-gradient(to bottom right, #f9f9f9, #ffebf2);
    color: #333;
    line-height: 1.6; /* ✅ Mejora la legibilidad */
    min-height: 100vh; /* ✅ Asegura que el contenido siempre cubra toda la pantalla */
}

/* ✅ Contenedor con responsividad */
.container {
    max-width: 800px;
    margin: 30px auto;
    padding: 20px;
    border-radius: 10px;
    background: #fff;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out; /* ✅ Optimización de animaciones */
}

.container:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

/* ✅ Estilo de los botones con accesibilidad */
button {
    display: block;
    width: 100%;
    padding: 10px;
    background: #ff69b4;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

button:hover {
    background: #ff85c2;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* ✅ Efecto al pasar el mouse */
}

/* ✅ Mejora de accesibilidad en lista de mascotas */
.mascotas-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.mascotas-list li {
    background: #ffebf2;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 5px;
