    color: #555;
    font-size: 1rem;
    transition: transform 0.2s ease-in-out, background 0.2s ease-in-out; /* ✅ Efecto de interacción */
}

.mascotas-list li:hover {
    transform: scale(1.05);
    background: #ffd1dc; /* ✅ Cambio de color al interactuar */
}

/* ✅ Mejora de accesibilidad para usuarios con preferencias de contraste */
@media (prefers-contrast: more) {
    body {
        background: #fff;
        color: #000;
    }
    .container {
        background: #f1f1f1;
    }
}

/* ✅ Media Queries para responsividad */
@media (max-width: 600px) {
    .container {
        max-width: 90%;
    }

    button {
        font-size: 1rem;
    }

    .mascotas-list li {
        font-size: 0.9rem;
    }
}